<div class="jumbotron jumbotron-fluid"
  <div class="container">
    <h1 class="display-3">Photos in your area</h1>
    <div class="form-group container">
      <%= form_tag("/photos", {method: "get", class:"foobar"})do %>
      <%= label_tag(:q, "Search a different area:") %> <br>
      <%= text_field_tag(:q)  %>
      <%= submit_tag("Search", class:"btn btn-primary")  %>
      <% end %>
    </div>
    <p class="lead">These are all of the photos taken in <%= params[:q] ? params[:q] : "in your area, #{@user.home_location}" %>.</p>
  </div>
</div>

<div class="container">
    <div class="row" style="margin-top: 50px" >
    <% @photos.each do |photo| %>
    <div class="col-md-4" style="margin-bottom: 10px">
      <div class="card">
        <div class="card-block">
        <img class="card-img-top img_thumbnail" src="<%= photo.image_url %>" alt="<%= photo.name %>">
          <div class="card-body">
            <h4 class="card-title"><%=photo.name%></h4>
          </div>


        </div>
        <div class="card-body">

        </div>
      </div>
    </div>
    <%end%>


