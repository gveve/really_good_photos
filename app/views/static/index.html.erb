<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">Log In</h1>
    <p class="lead">Login to your account below. If you dont have an account. <a href="/users/new">Sign up for one here.</a></p>
  </div>
</div>
<div class="form-group container">
  <div class="col-sm sign-up">
  <%= form_for @user, url: login_path do |f|  %>
    <%= f.label :email, "Email", class:"col-form-label"  %> <br>
    <%= f.text_field :email, class:"form-control" %> <br>
    <%= f.label :password, "Passsword"  %> <br>
    <%= f.password_field :password , class:"form-control" %> <br>
    <%= f.submit "Login", class:"btn btn-primary" %>
  <% end %>
